---
- name: Upload Configlets
  hosts: CloudVision
  connection: local

  vars_files: 
     - /home/coder/project/persist/Ansible_config_gen/vars/CVP_model.yml
  tasks:
    - name: Upload Configlets for EVPN Underlay
      arista.cvp.cv_configlet_v3:
        configlets: "{{ CVP_CONFIGLETS_EVPN }}"
        state: present 
    - name: Apply configlets
      arista.cvp.cv_device_v3:
        devices: "{{ CVP_DEVICES_EVPN }}"
        apply_mode: loose